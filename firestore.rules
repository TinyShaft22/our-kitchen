rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Household document - anyone can read to verify code exists
    // Only allow create if code doesn't exist yet
    match /households/{code} {
      allow read: if true;
      allow create: if !exists(/databases/$(database)/documents/households/$(code));
      allow update, delete: if false; // Households are permanent
    }

    // Helper function for collection rules
    // For reads: allow if document has householdCode (client query filters by code)
    // For creates: allow if householdCode is provided in new document
    // For updates: allow if document has householdCode and it's not being changed
    // For deletes: allow if document has householdCode

    match /meals/{mealId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /weeklyMeals/{weekId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /groceryList/{itemId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /staples/{stapleId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /bakingEssentials/{itemId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /boughtHistory/{historyId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /folders/{folderId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /snacks/{snackId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }

    match /scannedProducts/{productId} {
      allow read: if resource.data.householdCode != null;
      allow create: if request.resource.data.householdCode != null;
      allow update: if resource.data.householdCode != null
                    && request.resource.data.householdCode == resource.data.householdCode;
      allow delete: if resource.data.householdCode != null;
    }
  }
}
